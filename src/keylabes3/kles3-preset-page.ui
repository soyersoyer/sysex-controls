<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Kles3PresetPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Preset</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="ScPreferencesGroup">

                <child>
                  <object class="AdwSwitchRow">
                    <child><object class="ArControl"><property name="id">0x1300</property></object></child>
                    <property name="title" translatable="yes">Hide on controller</property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Pitch / Mod</property>
                    <property name="target-page">Kles3PitchModPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Main Knob</property>
                    <property name="target-page">Kles3MainKnobPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Knobs</property>
                    <property name="target-page">Kles3KnobPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Buttons</property>
                    <property name="target-page">Kles3ButtonPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Faders</property>
                    <property name="target-page">Kles3FaderPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Pads Bank A</property>
                    <property name="target-page">Kles3PadPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

                <child>
                  <object class="ScActionRow">
                    <property name="title" translatable="yes">Pads Bank B</property>
                    <property name="control-id-offset">0x0800</property>
                    <property name="control-cc-offset">0x0100</property>
                    <property name="target-page">Kles3PadPage</property>
                    <signal name="activated" handler="sc_action_kles3_preset_nav_push"/>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
