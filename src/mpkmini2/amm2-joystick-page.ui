<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Amm2JoystickPage" parent="ScNavigationPage">
    <property name="title" translatable="yes">Joystick</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top"><object class="AdwHeaderBar"/></child>
        <property name="content">
          <object class="ScPreferencesPage">

            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Horizontal</property>

                <child>
                  <object class="ScComboRow" id="horiz_mode">
                    <child><object class="AkControl"><property name="id">0x0d</property></object></child>
                    <property name="title" translatable="yes">Mode</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Pitch bend</item>
                          <item>Single CC</item>
                          <item>Dual CC</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScCcRow">
                    <child><object class="AkControl"><property name="id">0x0e</property></object></child>
                    <property name="title" translatable="yes">CC</property>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">horiz_mode</lookup>
                        <constant type="GVariant">[0x01, 0x02]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

                <child>
                  <object class="ScCcRow">
                    <child><object class="AkControl"><property name="id">0x0f</property></object></child>
                    <property name="title" translatable="yes">CC</property>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">horiz_mode</lookup>
                        <constant type="GVariant">[0x02]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Vertical</property>

                <child>
                  <object class="ScComboRow" id="vert_mode">
                    <child><object class="AkControl"><property name="id">0x10</property></object></child>
                    <property name="title" translatable="yes">Mode</property>
                    <property name="model">
                      <object class="ScControlValueList">
                        <items>
                          <item>Pitch bend</item>
                          <item>Single CC</item>
                          <item>Dual CC</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="ScCcRow">
                    <child><object class="AkControl"><property name="id">0x12</property></object></child>
                    <property name="title" translatable="yes">CC</property>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">vert_mode</lookup>
                        <constant type="GVariant">[0x02]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

                <child>
                  <object class="ScCcRow">
                    <child><object class="AkControl"><property name="id">0x11</property></object></child>
                    <property name="title" translatable="yes">CC</property>
                    <binding name="visible">
                      <closure type="gboolean" function="cv_in">
                        <lookup type="ScComboRow" name="selected-item">vert_mode</lookup>
                        <constant type="GVariant">[0x01, 0x02]</constant>
                      </closure>
                    </binding>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
